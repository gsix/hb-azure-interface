<div class='resource_title'>
  <span>Wellcome to</span>
  <h1>hubstaff-azure interface</h1>
</div>

<% if user_signed_in? %>
  <p style="font-size:12px">
    <span>your azure hook callbacks:</span>
    <span id='js-hook_callbacks_show_toggler' onclick="
      document.getElementById('js-hook_callbacks_show_toggler').style.display = 'none';
      document.getElementById('js-hook_callbacks').style.display = 'block'">
      <%= link_to 'show', 'javascript:void(0)' %>
    </span>
    <div style='display:none' id='js-hook_callbacks'>
      <p><%= azure_hook_create_url(token: current_user.access_token) %></p>
      <p><%= azure_hook_update_url(token: current_user.access_token) %></p>
      <p><%= azure_hook_destroy_url(token: current_user.access_token) %></p>
    </div>
  </p>
<% end %>
